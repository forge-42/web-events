{
	"name": "web-events",
	"version": "1.0.0",
	"description": "Minimal open-source stack to help you ship an open-source package in TS",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"import": "./dist/index.cjs",
				"require": "./dist/index.cjs"
			}
		},
		"./react": {
			"import": {
				"types": "./dist/react.d.ts",
				"import": "./dist/react.js",
				"default": "./dist/react.js"
			},
			"require": {
				"types": "./dist/react.d.cts",
				"import": "./dist/react.cjs",
				"require": "./dist/react.cjs"
			}
		}
	},
	"peerDependencies": {
		"@types/react": ">=18.0.0",
		"@types/react-dom": ">=18.0.0",
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": true
		},
		"react-dom": {
			"optional": true
		},
		"@types/react": {
			"optional": true
		},
		"@types/react-dom": {
			"optional": true
		}
	},
	"scripts": {
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"build": "tsdown  --config tsdown.config.ts --clean",
		"dev": "tsdown   --config tsdown.config.ts --watch",
		"prepublishOnly": "pnpm run build",
		"typecheck": "tsc",
		"validate": "pnpm run check && pnpm run typecheck && pnpm run test"
	},
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/forge-42/web-events.git"
	},
	"bugs": {
		"url": "https://github.com/forge-42/web-events/issues"
	},
	"files": [
		"dist"
	],
	"homepage": "https://github.com/forge-42/web-events#readme",
	"publishConfig": {
		"provenance": true
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.4",
		"@changesets/cli": "^2.29.0",
		"@standard-schema/spec": "^1.0.0",
		"@types/node": "^20.17.30",
		"@vitest/coverage-v8": "^3.1.1",
		"happy-dom": "^17.4.4",
		"tsdown": "^0.9.1",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	}
}